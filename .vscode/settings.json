{
  // Configuration KTN-Linter via wrapper
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "off",
  "go.useLanguageServer": true,
  "go.buildOnSave": "off",
  "go.vetOnSave": "off",
  "go.lintFlags": [],
  "go.alternateTools": {
    "golangci-lint": "${workspaceFolder}/bin/golangci-lint-wrapper"
  },
  // Activer les diagnostics du linter
  "go.toolsManagement.autoUpdate": false,
  "go.toolsManagement.checkForUpdates": "off",
  // DÃ©sactiver les diagnostics "unused" et autres dans gopls
  "gopls": {
    "analyses": {
      "unusedparams": false,
      "unusedwrite": false,
      "unusedvariable": false,
      "unusedfunc": false,
      "useany": false
    }
  },
  // Configuration pour les fichiers Go
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true
  },
  // Build flags pour Go
  "go.buildFlags": ["-buildvcs=false"],
  "go.buildTags": "",
  // Linter automatique via triggerTaskOnSave
  "triggerTaskOnSave.tasks": {
    "KTN-Linter: Build and Scan": [
      "**/*.go"
    ]
  },
  "triggerTaskOnSave.on": true,
  "triggerTaskOnSave.restart": true,
  // Afficher automatiquement les erreurs
  "problems.autoReveal": true,
  "problems.showCurrentInStatus": true
}