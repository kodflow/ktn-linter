{
  // Configuration KTN-Linter via wrapper
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "go.useLanguageServer": true,
  "go.buildOnSave": "package",
  "go.vetOnSave": "off",
  "go.lintFlags": [],
  "go.alternateTools": {
    "golangci-lint": "${workspaceFolder}/bin/golangci-lint-wrapper"
  },
  // Activer les diagnostics du linter
  "go.toolsManagement.autoUpdate": false,
  "go.toolsManagement.checkForUpdates": "off",
  // Forcer l'utilisation du linter alternatif
  "go.lintTool": "golangci-lint",
  // Désactiver les diagnostics "unused" et autres dans gopls
  "gopls": {
    "analyses": {
      "unusedparams": false,
      "unusedwrite": false,
      "unusedvariable": false,
      "unusedfunc": false,
      "useany": false
    }
  },
  // Configuration pour les fichiers Go
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true
  },
  // Build flags pour Go
  "go.buildFlags": ["-buildvcs=false"],
  "go.buildTags": "",
  // Build automatique du linter au save via l'extension Run on Save
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "(cmd|pkg)/.*\\.go$",
        "cmd": "cd ${workspaceFolder} && go build -buildvcs=false -o builds/ktn-linter ./cmd/ktn-linter"
      }
    ]
  },
  // Mapper la sortie du linter pour l'onglet Problèmes
  "problems.autoReveal": true,
  "problems.showCurrentInStatus": true
}