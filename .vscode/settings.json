{
  // Configuration KTN-Linter via wrapper
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "go.useLanguageServer": true,
  "go.lintFlags": [
    "--fast"
  ],
  "go.alternateTools": {
    "golangci-lint": "${workspaceFolder}/bin/golangci-lint-wrapper"
  },
  // Désactiver les diagnostics "unused" et autres dans les fichiers de test
  "gopls": {
    "analyses": {
      "unusedparams": false,
      "unusedwrite": false,
      "unusedvariable": false,
      "unusedfunc": false,
      "useany": false
    }
  },
  // Désactiver complètement gopls pour les fichiers de test
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}