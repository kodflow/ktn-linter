# Configuration KTN-Linter
# Ce fichier permet de désactiver des règles spécifiques

# Désactiver des règles globalement
disabled:
  - KTN-VAR-014  # Désactiver la règle sur les gros structs (>64 bytes)
  - KTN-INTERFACE-001  # Désactiver la détection d'interfaces non utilisées

# Exemptions par fichier (patterns glob)
exemptions:
  # Provider Terraform (contraintes framework)
  - path: "**/provider/*.go"
    rules:
      - KTN-VAR-014  # schema.Schema du framework Terraform
      - KTN-STRUCT-002  # Interfaces parfois imposées par le framework

  # Fichiers générés
  - path: "**/*_gen.go"
    rules:
      - "*"  # Ignorer tous les linters sur fichiers générés

  # Tests
  - path: "**/*_test.go"
    rules:
      - KTN-FUNC-001  # Longueur de fonction (tests peuvent être longs)
      - KTN-FUNC-005  # Complexité cyclomatique (tests de edge cases)

# Seuils personnalisés
thresholds:
  func_max_lines: 35  # KTN-FUNC-001 (défaut: 35)
  func_max_params: 5  # KTN-FUNC-002 (défaut: 5)
  cyclomatic_complexity: 10  # KTN-FUNC-005 (défaut: 10)
  struct_max_bytes: 64  # KTN-VAR-014 (défaut: 64)
